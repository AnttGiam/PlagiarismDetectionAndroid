<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewCases"
        android:focusable="true"
        android:focusableInTouchMode="true">

   <RelativeLayout
        android:id="@+id/Top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

       <ImageView
           android:layout_width="67dp"
           android:layout_height="27dp"
           android:layout_marginTop="20dp"
           android:src="@drawable/cases"
           android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="20dp"
        android:id="@+id/apriMenu"
        android:layout_height="20.72dp"
        android:background="@drawable/search_svgrepo_com"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        />

    <LinearLayout
        android:id="@+id/MainContent"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Cases"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ScrollView>

    </LinearLayout>
    </LinearLayout>
   </RelativeLayout>

    <LinearLayout
        android:id="@+id/menuScorrevole"
        android:layout_width="310dp"
        android:layout_height="200dp"
        android:layout_marginTop="-201dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Search on Artist"
                android:textSize="16dp"
                android:textColor="@color/black" />

            <Space
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <EditText
                android:id="@+id/searchArtist"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:hint=""
                android:textColor="#4f4f4f"
                android:textColorHint="#4f4f4f"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Search on Title"
                android:textSize="16dp"
                android:textColor="@color/black" />

            <Space
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <EditText
                android:id="@+id/searchTitle"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:hint=""
                android:textColor="#4f4f4f"
                android:textColorHint="#4f4f4f"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Search on Info"
                android:textSize="16dp"
                android:textColor="@color/black" />

            <Space
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <EditText
                android:id="@+id/searchInfo"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:hint=""
                android:textColor="#4f4f4f"
                android:textColorHint="#4f4f4f"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <Button
                android:onClick="Search"
                android:id="@+id/search"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg"
                android:text="Search"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>