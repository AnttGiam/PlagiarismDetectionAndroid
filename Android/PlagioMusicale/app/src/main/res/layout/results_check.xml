<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="145dp"
        android:layout_height="26dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/info_case"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:paddingTop="210dp">


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:id="@+id/Esito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Plagiarism"
                            android:textSize="26dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/PlagiarismVerdictTW"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DETECTED"
                            android:textSize="26dp"
                            android:textColor="@color/blueTema"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginHorizontal="30dp"
                    android:layout_below="@id/Esito"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray"/>
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/CosineLayout"
                    android:layout_below="@id/Esito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/progressbar"
                        android:id="@+id/CosineProgress"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        tools:progress="10"
                        android:layout_gravity="center_horizontal"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cosine Bar"
                            android:textSize="23dp"
                            />
                        <TextView
                            android:id="@+id/CosineBarText"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.10%"
                            android:textColor="@color/blueTema"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/SoresenDice"
                    android:layout_below="@id/CosineLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/progressbar"
                        android:id="@+id/SoresenDiceBar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        tools:progress="75"
                        android:layout_gravity="center_horizontal"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soresen Dice"
                            android:textSize="23dp"
                            />
                        <TextView
                            android:id="@+id/SoresenDiceText"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="74.90%"
                            android:textColor="@color/blueTema"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/OverLap"
                    android:layout_below="@id/SoresenDice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="20dp">

                    <ProgressBar
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/progressbar"
                        android:id="@+id/OverLapBar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:progress="34"
                        android:layout_gravity="center_horizontal"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overlap"
                            android:textSize="23dp"
                            />
                        <TextView
                            android:id="@+id/OverLapText"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34.23%"
                            android:textColor="@color/blueTema"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_below="@id/OverLap"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/darker_gray"/>
                <RelativeLayout
                    android:id="@+id/percentualiLayout"
                    android:layout_marginVertical="20dp"
                    android:layout_below="@+id/OverLap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginHorizontal="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/PercentualeTW"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="70.02%"
                            android:textColor="@color/blueTema"
                            android:textSize="24dp"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Percentage"
                            android:textSize="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginHorizontal="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/TresholdTW"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="50.00%"
                            android:textColor="@color/blueTema"
                            android:textSize="24dp"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Treshold"
                            android:textSize="18dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_below="@id/percentualiLayout"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/darker_gray"/>
                <RelativeLayout
                    android:id="@+id/ClusteringLayout"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@+id/percentualiLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp">
                    <TextView
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clustering"
                        android:textStyle="bold"
                        android:textSize="26dp"/>
                    <TextView
                        android:id="@+id/ClusteringTW"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="50.00%"
                        android:textColor="@color/blueTema"
                        android:textSize="26dp"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>